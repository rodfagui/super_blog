<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>  
  <% if !micropost.title.nil? %>
    <h1 class="title"><%= micropost.title %></h1>
  <% end %>
  <span class="content"><%= micropost.content.truncate(250) %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago
    | <%= link_to "see more", micropost %>
    <% if current_user?(micropost.user) %>
      | <%= link_to "edit", edit_micropost_path(micropost) %>
      | <%= link_to "delete", micropost, method: :delete, data: { confirm: "You sure?" } %>
    <% end %>
  </span>
  <span class="comment"><%= micropost.comments.count.to_s + " " %><span class="glyphicon glyphicon-comment"></span></span>
</li>