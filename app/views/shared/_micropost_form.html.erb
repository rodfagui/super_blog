<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.text_field :title, placeholder: "Title...", class: 'form-control' %>
  <%= f.text_area :content, placeholder: "Compose new post...", class: 'form-control', rows: '10' %>
  <%= f.submit @micropost.new_record? ? "Post" : "Edit Post", class: "btn btn-primary" %>
<% end %>